generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  SHORT_ANSWER
  PARAGRAPH
  MULTIPLE_CHOICE
  CHECKBOXES
  DROPDOWN
}

model User {
  id        String     @id @map("_id")
  email     String     @unique
  forms     Form[]
  responses Response[]
}

model Form {
  id                     String     @id @map("_id") @default(auto()) @db.ObjectId
  title                  String
  description            String?
  published              Boolean    @default(false)
  acceptingResponses     Boolean    @default(true)
  createdBy              String
  user                   User       @relation(fields: [createdBy], references: [id])
  createdAt              DateTime   @default(now())
  
  // Form Settings
  shuffleQuestions       Boolean    @default(false)
  collectEmail           Boolean    @default(false)
  allowMultipleResponses Boolean    @default(true)
  showProgress           Boolean    @default(true)
  confirmationMessage    String     @default("Your response has been recorded.")
  defaultRequired        Boolean    @default(false)
  
  // Quiz Settings
  isQuiz                 Boolean    @default(false)
  showCorrectAnswers     Boolean    @default(true)
  releaseGrades          Boolean    @default(true)
  
  // Response Editing Settings
  allowResponseEditing   Boolean    @default(false)
  editTimeLimit          String     @default("24h") // "always", "24h", "7d", "30d"
  
  questions              Question[]
  responses              Response[]
}

model Question {
  id          String       @id @map("_id") @default(auto()) @db.ObjectId
  text        String
  description String?      // Optional description for the question
  type        QuestionType
  required    Boolean      @default(false)
  formId      String       @db.ObjectId
  form        Form         @relation(fields: [formId], references: [id])
  
  // Image field for question
  imageUrl    String?      // Optional image URL for the question
  
  // Quiz fields
  points             Int       @default(1)
  correctAnswers     String[]  @default([])  // For multiple choice, checkboxes
  
  // Option settings
  shuffleOptionsOrder Boolean   @default(false)  // Shuffle options for each respondent
  
  options   Option[]
  answers   Answer[]
}

model Option {
  id         String    @id @map("_id") @default(auto()) @db.ObjectId
  text       String
  questionId String    @db.ObjectId
  question   Question  @relation(fields: [questionId], references: [id])
}

model Response {
  id        String     @id @map("_id") @default(auto()) @db.ObjectId
  userId    String?   
  email     String?    // Collected email when collectEmail setting is enabled
  formId    String     @db.ObjectId
  createdAt DateTime   @default(now())
  
  // Quiz results
  totalScore     Int?     // Total points scored (null for regular forms)
  maxScore       Int?     // Maximum possible points
  
  // Response editing
  editToken      String?  // Token for editing responses
  editTokenExpiry DateTime? // When edit permission expires
  
  user      User?      @relation(fields: [userId], references: [id])
  form      Form       @relation(fields: [formId], references: [id])
  answers   Answer[]
}

model Answer {
  id             String    @id @map("_id") @default(auto()) @db.ObjectId
  responseId     String    @db.ObjectId
  questionId     String    @db.ObjectId
  answerText     String?
  selectedOptions String[]  @default([])
  
  // Quiz grading
  isCorrect      Boolean?  // null for regular forms, true/false for quiz
  pointsEarned   Int?      // Points earned for this answer
  
  response       Response  @relation(fields: [responseId], references: [id])
  question       Question  @relation(fields: [questionId], references: [id])
}